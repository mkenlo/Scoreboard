<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context="com.mkenlo.scoreboard.MainActivity"    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_xsmall"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/spacing_xsmall">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Team1"
                    android:textSize="@dimen/text_medium"
                    android:fontFamily="@string/font_family_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"/>
                <TextView
                    android:id="@+id/score_team1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="0"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="@dimen/text_large"
                    android:layout_marginBottom="@dimen/spacing_medium"/>

                <android.support.v7.widget.ButtonBarLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium">
                    <ImageButton
                        android:id="@+id/add_one_button_team1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/one"
                        android:onClick="addOnePointTeam1"
                        android:background="@color/colorPrimaryLight"/>
                    <ImageButton
                        android:id="@+id/add_two_button_team1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/two"
                        android:onClick="addTwoPointTeam1"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginRight="@dimen/spacing_xsmall"
                        android:layout_marginLeft="@dimen/spacing_xsmall"/>
                    <ImageButton
                        android:id="@+id/add_three_button_team1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/three"
                        android:onClick="addThreePointTeam1"
                        android:background="@color/colorPrimaryLight"/>

                </android.support.v7.widget.ButtonBarLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Fouls"
                    android:fontFamily="@string/font_family_light"
                    android:layout_marginBottom="@dimen/spacing_medium"/>

                <android.support.v7.widget.ButtonBarLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:background="#2394bc"
                        android:onClick="decrementFoulsTeam1"/>
                    <TextView
                        android:id="@+id/fouls_team1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:textAlignment="center"
                        android:text="0"/>
                    <Button
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:background="#2394bc"
                        android:onClick="incrementFoulsTeam1"/>
                </android.support.v7.widget.ButtonBarLayout>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginRight="@dimen/spacing_xsmall">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team2"
                    android:textAlignment="center"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"/>
                <TextView
                    android:id="@+id/score_team2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_large"
                    android:fontFamily="@string/font_family_medium"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/spacing_medium"/>
                <android.support.v7.widget.ButtonBarLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium">
                    <ImageButton
                        android:id="@+id/add_one_button_team2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/one"
                        android:onClick="addOnePointTeam2"
                        android:background="@color/colorPrimaryLight"/>
                    <ImageButton
                        android:id="@+id/add_two_button_team2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/two"
                        android:onClick="addTwoPointTeam2"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginRight="@dimen/spacing_xsmall"
                        android:layout_marginLeft="@dimen/spacing_xsmall"/>
                    <ImageButton
                        android:id="@+id/add_three_button_team2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/three"
                        android:onClick="addThreePointTeam2"
                        android:background="@color/colorPrimaryLight"/>

                </android.support.v7.widget.ButtonBarLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fouls"
                    android:fontFamily="@string/font_family_light"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/spacing_medium"/>

                <android.support.v7.widget.ButtonBarLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:background="#2394bc"
                        android:onClick="decrementFoulsTeam2"/>
                    <TextView
                        android:id="@+id/fouls_team2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="0"
                        android:textAlignment="center"/>
                    <Button
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:background="#2394bc"
                        android:onClick="incrementFoulsTeam2"/>
                </android.support.v7.widget.ButtonBarLayout>
            </LinearLayout>
        </LinearLayout>
        <Chronometer
            android:id="@+id/timer"
            android:textColor="#2394bc"
            android:textSize="@dimen/text_medium"
            android:fontFamily="@string/font_family_condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/result_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@string/font_family_medium"
            android:padding="@dimen/spacing_xsmall"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_medium">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="reset"
                android:textColor="@color/colorPrimaryLight"
                android:onClick="reset"/>

            <Button
                android:id="@+id/gameover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Game over"
                android:textColor="@color/colorPrimaryLight"
                android:onClick="stopGame"/>
        </android.support.v7.widget.ButtonBarLayout>

    </LinearLayout>


</ScrollView>
